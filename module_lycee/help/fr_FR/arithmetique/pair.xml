<refentry version="5.0-subset Scilab" xml:id="pair" xml:lang="fr"
          xmlns="http://docbook.org/ns/docbook"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          xmlns:svg="http://www.w3.org/2000/svg"
          xmlns:ns4="http://www.w3.org/1999/xhtml"
          xmlns:mml="http://www.w3.org/1998/Math/MathML"
          xmlns:db="http://docbook.org/ns/docbook">
  <info>
    <pubdate>$LastChangedDate$</pubdate>
  </info>

  <refnamediv>
    <refname>pair</refname>

    <refpurpose>test de parité</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <title>Séquence d'appel</title>

    <synopsis>b = pair(n)</synopsis>
  </refsynopsisdiv>

  <refsection>
    <title>Paramètres</title>

    <variablelist>
      <varlistentry>
        <term>n</term>

        <listitem>
          <para>entier positif ou nul</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>b</term>

        <listitem>
          <para><literal>%T</literal> (vrai) ou <literal>%F</literal>
          (faux)</para>
        </listitem>
      </varlistentry>
    </variablelist>
  </refsection>

  <refsection>
    <title>Description</title>

    <para><literal>pair</literal> retourne vrai (<literal>%T</literal>) si n
    est pair et faux (<literal>%F</literal>) sinon.</para>
  </refsection>

  <refsection>
    <title>Exemples</title>

    <programlisting role="example">pair(24)
pair(25)</programlisting>
  </refsection>

  <refsection>
    <title>Voir Aussi</title>

    <simplelist type="inline">
      <member><link linkend="impair">impair</link></member>
    </simplelist>
  </refsection>
</refentry>
